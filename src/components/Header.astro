---
const PAGES = [
  { href: "#", label: "Home" },
  { href: "#about", label: "About" },
  { href: "#projects", label: "Projects" },
];
---

<header
  class="flex justify-between items-center h-16 w-full px-32 fixed top-0 left-0 backdrop-blur-lg shadow-md z-50"
>
  <a href='#'>
    <h1 class="text-2xl font-600">Artem Makatera</h1>
  </a>
  <nav>
    <ul class="flex space-x-8">
      {
        PAGES.map((page) => (
          <li>
            <a href={`${page.href}`} class="text-gray-800 hover:text-gray-600">
              {page.label}
            </a>
          </li>
        ))
      }
    </ul>
  </nav>
</header>
